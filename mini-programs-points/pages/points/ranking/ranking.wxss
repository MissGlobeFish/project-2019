/* pages/points/ranking/ranking.wxss */
.container {
  background-color: #fff;
  height: 100%;
}
.switch-tab {
  border-bottom: 1px solid #d3d3d3;
}
.content .date {
  color: #828282;
  font-size: 30rpx;
  margin-top: 35rpx;
}
.content .content-list {
  padding: 0 30rpx;
  margin-top: 100rpx;
}
.content .content-list .list-head {
  display: flex;
  font-size: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #b1aaaa;
  margin-bottom: 10rpx;
}
.content .content-list .list-head>view ,.content .content-list .list-item>view {
  /* width: 25%; */
}
.content .content-list .list-item {
  display: flex;
  font-size: 26rpx;
  padding: 20rpx 0;
  align-items: center;
}
.user-img {
  width: 52rpx;
  height: 52rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}