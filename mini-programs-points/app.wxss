/**app.wxss**/

/* color */
.theme-bgcolor {
  background: #5d5afd;
}
.theme-color {
  color: #5d5afd;
}
.color {
  color: #fff;
}
.sub-color {
  color: #878787;
}


/* font */
.font-24 {
  font-size: 24rpx;
}
.font-36 {
  font-size: 36rpx;
}

/* float */

.fl {
  float: left;
}
.fr {
  float: right;
}

/* align */

.text-left {
  text-align: left;
}
.text-right {
  text-align: right;
}
.text-center {
  text-align: center;
}
/* margin */
.margin-top-10 {
  margin-top: 10rpx;
}


.flex-space-between {
  display: flex;
  justify-content: space-between;
}


view,
text,
image {
    box-sizing: border-box;
}
button::after {
  border: none;
}
button {
  margin: 0;
  background: transparent;
  border-radius: 0;
}
page {
  height: 100%;
  background-color: #f2f2f2;
}
image {
  width: 100%;
  height: 100%;
}


/* 公共模块标题 */
.common-sub-title {
  font-size: 32rpx;
}