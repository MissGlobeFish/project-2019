/* pages/loginUserInfo/loginUserInfo.wxss */
.container {
    position: fixed;
    height: 100%;
    width: 100%;
    display:flex;
    flex-direction:column;
    background-color: #fff;
    align-items: center;
    padding: 30rpx 40rpx;
}

.inputTitle {
    margin-bottom: 30rpx;
    width: 100%;
    text-align: left;
    font-size:16px;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:rgba(53,53,53,1);
}

.container>form-input {
    width: 100%
}
.submitBtn {
    margin-top: 70rpx;
    width: 100%;
    height:110rpx;
    border-radius:4px;
    font-size:16px;
    font-family:PingFangSC-Regular;
    line-height:110rpx;
}

.submitBtnOk {
    background:linear-gradient(90deg,rgba(255,63,63,1) 0%,rgba(253,97,97,1) 100%);
    box-shadow:0px 9px 21px 0px rgba(240,61,61,0.47);
}
.submitBtnDisabled {
    background:rgba(200,200,200,1);
}
   
.button[disabled][type="default"],wx-button[disabled]:not([type]) {
    background:rgba(200,200,200,1);
}