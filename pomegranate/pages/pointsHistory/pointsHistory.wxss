/* pages/pointsHistory.wxss */
.backBox {
    background-color: #fff;
    padding-top: 30rpx;
}
.headerBackBox {
    position: relative;
    border-radius: 10rpx;
    height: 260rpx;
    width: 93.3%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background:linear-gradient(90deg,rgba(255,63,63,1) 0%,rgba(253,97,97,1) 100%);
    /* background-color: aqua; */
    box-shadow:0px 9px 21px 0px rgba(240,61,61,0.47);
}
.pointTitleLab {
    margin-top: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #FFFFFF;
    text-align: center;
    z-index: 99;
}
.pointLab {
    font-family: BebasNeue;
    font-size: 60px;
    color: #FFFFFF;
    z-index: 99;
}
.headerBackImage {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.listHeader {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 40rpx;
    margin-bottom: 15rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.listHeaderName {
    font-family: PingFangSC-Medium;
    font-size: 16px;
    color: #353535;
}
.listHeaderBtn {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color:rgba(255,61,75,1);
    padding-right: 0;
    line-height: 1;
}
.cells:not(:last-child) {
    box-shadow: inset 0 -1px 0 0 #E8E8E8;
}
.cells {
    margin-left: 40rpx;
    margin-right: 40rpx;
    min-height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.cellText {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #353535;
}
.lastText {
    height: 116rpx;
    line-height: 116rpx;
    width: 100%;
    text-align: center;
    font-size:14px;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(128,128,128,1);
}