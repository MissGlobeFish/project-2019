/* pages/myInfo/myInfo.wxss */
.container {
  /* position: fixed; */
  height: 100%;
  /* width: 100%; */
  display:flex;
  flex-direction:column;
  background-color: #fff;
}
.information-bottom {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 40rpx;
  /* border-top:20rpx solid #e8e8e8; */
}
.information-bottom .title {
  font-weight: bold;
  padding: 30rpx 0 15rpx 0;
}
.information-bottom .input-item {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #e8e8e8;
}
.pay-account .btn {
  line-height: 100rpx;
}
button[disabled]:not([type])  {
  background:rgba(37,37,42,.7);
  color: #fff
}
input[disabled] {
  color: #808080;
}
.fix-bottom-btn .btn{
  background-color: #fff;
  color: #FF3D4B;
}


/* 空页面 */
.null-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-data>image {
  width: 363rpx;
  height: 276rpx;
  margin-top: 163rpx;
}
.null-data .msg {
  color: #808080;
  font-size: 32rpx;
  margin-top: 80rpx;
}
.null-data .btn {
  width: 360rpx;
  height: 100rpx;
  background: #FF3D4B;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  margin-top: 80rpx;
  border-radius: 2px;
}
