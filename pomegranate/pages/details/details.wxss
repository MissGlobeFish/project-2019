/* pages/details/details.wxss */

.container {
  position: relative;
  background-color: #fff
}
.main-info .header {
  position:relative;
  z-index:101;
  padding: 60rpx 40rpx 0 40rpx;
  display: flex;
}
.pic-wrap {
  width: 200rpx;
  height: 271rpx;
  position: relative;
}
.pic-wrap>image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.pic-wrap .sub-icon {
  position: absolute;
  padding: 0 12rpx;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.course-icon {
  width: 66rpx;
  height: 34rpx;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  border-radius: 2px;
  border: 1px solid #fff;
}

.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 38rpx;
}
.right .title {
  font-size: 40rpx;
  color: #fff;
  line-height: 56rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-family:PingFangSC-Medium;

}
.right .price {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1;
}
.right .price-sub {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.header-bg-wrap {
  width: 100%;
  height: 530rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0,0,0,.3);
  overflow: hidden;
}
.header-bg {
  width:100%;
  height:100%;
  background-repeat:no-repeat;
  background-position:center;
  filter:blur(20px);
  transform:scale(1.5);
  background-size:100% 100%;

}
.content {
  position: relative;
  z-index: 100;
  padding: 62rpx 40rpx 40rpx 40rpx;
  border-bottom: 1px solid #e8e8e8;
  margin-top:-62rpx;
  background:#fff;
  border-radius:15px 15px 0px 0px;
}
.content-top {
  padding-bottom: 40rpx;
  border-bottom: 1px solid #e8e8e8;
  margin-bottom: 36rpx;
}
.content-top .info-text{
  display: flex;
  align-items: center;
  margin-top: 37rpx;
  font-size: 32rpx;
  font-family:PingFangSC-Medium;
  color: #353535;
}
.content-top .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.detail-mid {
  margin-top: 30rpx;
  padding-bottom: 86rpx;
  
  width:100%;
  overflow-x:hidden;
}
.detail-bottom {
  width: 100%;
  height: 124rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #e8e8e8;
  z-index: 102;
}
.teacher-top {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 40rpx 0;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
  margin-top: 50rpx;
}
.teacher-item {
  padding: 10rpx;
}

.teacher-img {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  background-color: #eee;
  align-items: center;
  margin-bottom: 30rpx;
}
.teacher-name > text{
  font-size: 40rpx;
  color: #353535;
}
.position {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #808080
}
.position::before {
  display: inline-block;
  content: '';
  width: 10rpx;
  height: 10rpx;
  background: #FF4343;
  margin-right: 20rpx;
  vertical-align: middle;
}
.rich-text {
  padding-top: 40rpx;
}
.rich-text-title {
  margin-bottom:20rpx;
  font-size:32rpx;
  color:#353535;
  font-weight:bold;

}
.applyNum {
  flex: 1;
  margin-left: 32rpx;
}
.apply {
  width: 380rpx;
  text-align: center;
  background:linear-gradient(to right,#FF3D4B,#FD6161);
  line-height: 88rpx;
  color: #fff;
  border-radius: 50px;
  box-shadow: 0 0 5px 0 #FF3F3F;
}
.apply[disabled]:not([type])  {
  background:#b1b1b1;
  color: #fff;
  box-shadow:none;
}
.detail-bottom .allSale {
  background: #808080 !important;
}