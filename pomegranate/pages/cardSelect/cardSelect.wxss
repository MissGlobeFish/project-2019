/* pages/cardSelect/cardSelect.wxss */
.scroll-container {
  display: flex;
  justify-content: space-between;
  /* margin: auto 20rpx 20rpx 20rpx; */
}
.item {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  height: 455rpx;
  background-color: #fff;
  text-align: center;
  margin-left: 20rpx;
  float: left;
  margin-top: 20rpx;
  position: relative;
  box-shadow:0px 2px 14px 0px rgba(0,0,0,0.13);
}
.cellImage {
  width: 100%;
  height: 345rpx;
  background: #fff;
  /* margin-top: 40rpx; */
}
.item-text {
  /* margin-top: 60rpx; */
  height:100rpx;
  line-height:100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-text>text {
  font-size: 32rpx;
}
.selectIcon {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #FF3D4B;
}
.rightIcon {
  width:11rpx;
  height:15rpx;
  border-bottom:2px solid #fff;
  border-right:2px solid #fff;
  transform:rotate(45deg);
  margin:10rpx auto auto auto;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background-color: #fff;
}
.footer button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #FF3D4B;
}