/* pages/applyInfo/applyInfo.wxss */
.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  background-color: #fff;
}
.tip-msg {
  font-size: 28rpx;
  padding: 24rpx 40rpx;
  background-color: #f4f4fb;
  color: #808080;
}
.information-bottom {
  /* margin-top: 20rpx; */
  background: #fff;
  padding: 0 40rpx;
  /* border-top:20rpx solid #e8e8e8; */
}
.information-bottom .title {
  padding: 30rpx 0 15rpx 0;
  font-size: 32rpx;
}
.information-bottom .input-item {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #e8e8e8;
}
.pay-account .btn {
  line-height: 100rpx;
  background: linear-gradient(to right,#FF3F3F,#FD6161);
}
button[disabled]:not([type])  {
  background:#c8c8c8;
  color: #fff
}
.null-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-data>image {
  width: 363rpx;
  height: 276rpx;
  margin-top: 163rpx;
}
.null-data .msg {
  color: #808080;
  font-size: 32rpx;
  margin-top: 80rpx;
}
