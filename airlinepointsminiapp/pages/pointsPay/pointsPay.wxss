/* pages/pointsPay/pointsPay.wxss */
.module-wrap {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 0 20rpx;
}
.cellBox:not(:first-child) {
  box-shadow:0px -1rpx 0px 0px rgba(232,232,232,1);
} 
.cellBox {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 20rpx;
    font-size: 14px;
}

.cellNameLab {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #353535;
  width: 400rpx;
}
.cellNumberLab {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #808080;
}
.cellAnountLab {
  font-family: PingFangSC-Medium;
  font-size:28rpx;
  color:rgba(255,61,75,1);
  text-align: right;
}
.cellAmountUnit {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #808080;
  margin-left: 5px;
}


/* footer */
.footer-bottom {
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}
.footer-left {
  width: 68%;
  padding-left: 32rpx;
  display: flex;
  align-items: center
}
.footer-right {
  flex: 1;
  text-align: center;
  background-color: #FF3D4B;
  line-height: 100rpx;
  color: #fff;
}
.numberText {
  font-family: PingFangSC-Medium;
}
.amountUnit {
  margin-left: 10px;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #808080;
}


/* 弹窗 */
.modal-content {
  padding: 50rpx;
  min-height: 314rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-titleText {
  font-size:18px;
  font-family:PingFangSC-Medium;
  color:rgba(50,50,50,1);
}

.modal-contentText {
  font-size:16px;
  font-family:PingFangSC-Regular;
  color:rgba(50,50,50,1);
}
.modal-importantText {
  font-family:PingFangSC-Medium;
  color:rgba(255,61,75,1);
}