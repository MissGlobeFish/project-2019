
.color-1 { 
  background:linear-gradient(to,right #FF3F3F,#FD6161);
}
/* 蓝色 */
.color-3 {
  background:linear-gradient(to,right #4C3AF9,#3869F9);
}
.course-cell {
  display: flex;
  background-color: #fff;
  padding: 40rpx 40rpx 30rpx 40rpx;
  
}
.course-cell:not(:last-child) {
  border-bottom: 1px solid #e8e8e8;
}
.pic-wrap {
  width: 148rpx;
  height: 200rpx;
  position: relative;
}
.pic-wrap>image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
  /* filter:blur(2px); */
}
.pic-wrap .sub-icon {
  position: absolute;
  padding: 0 12rpx;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.info-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 26rpx;
}
.right-bottom {
  display: flex;
  justify-content: space-between;
}
.icon-pic {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-right: 5rpx;
  position:relative;
  top:-1px;
}
.info-item.info-sub {
  overflow: hidden;
  margin-bottom: 14rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  margin-top: 0;
  line-height: 1.6;
  color: #323232;
}
.info-item {
  margin-top: 10rpx;
}
.price {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1;
}
.price-sub {
  font-size: 32rpx;
  margin-right: 10rpx;
}
.pay-icon {
  font-size: 36rpx;
  margin-left: 10rpx;
  font-weight:bold;
}
.item-text {
  font-size: 24rpx;
  color: #808080;
}


.module-wrap {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.module-title {
  padding: 30rpx 0  15rpx 0;
}
.module-title .title {
  /* font-weight: bold; */
  font-family:PingFangSC-Medium;
}
.input-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #e8e8e8;
  font-size: 14px;
}
.input-item>text {
  font-size: 28rpx;
}
.input-item .disable-text {
  color: #808080;
}
.input-item .fc-1 {
  font-weight:bold;
}
.module-wrap .input-item:last-child {
  border-bottom: none;
}
.discount::before {
  display: inline-block;
  content: '券';
  color: #fff;
  font-size: 24rpx;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 2px;
  background-color: #FF5842;
  margin-right: 10rpx;
  vertical-align: middle;
  margin-top: -4rpx;
}
.discount-price::after {
  display: inline-block;
  content: '';
  width: 14rpx;
  height: 14rpx;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  transform: rotate(-45deg);
  margin-left: 20rpx;
  vertical-align: middle;
}

.footer-bottom {
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}
.footer-left {
  width: 510rpx;
  margin-left: 32rpx;
}
.footer-left text {
  font-size: 36rpx;
}
.footer-right {
  flex: 1;
  text-align: center;
  background-color: #FF3D4B;
  line-height: 100rpx;
  color: #fff;
}