/* pages/my/my.wxss */
.containor {
    background-color: #FFFFFF;
    padding: 20rpx 30rpx 0 30rpx;
    position:relative;
}

.shopScroll {
    overflow: auto;
    background-color:rgba(245,245,249,1);
}

/* 个人信息卡片 */
.userInfoBox {
    position:relative;
    width: 100%;
    height: 370rpx;
    background:linear-gradient(90deg,rgba(255,63,63,1) 0%,rgba(253,97,97,1) 100%);
    box-shadow:0px 9px 21px 0px rgba(240,61,61,0.47);
    border-radius:40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}
.userCardBackIMG {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}
/* 头像 */
.userinfo-avatar {
    position: relative;
    margin-top: 36rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    z-index: 999;
    border: 10rpx solid #fff;
    background-color: #fff;
}
/* 名称 等级 */
.userName {
    margin-top: 30rpx;
    font-size:40rpx;
    font-family:PingFangSC-Regular;
    color:rgba(255,255,255,1);
    vertical-align: center;
    z-index: 1;
    display: flex;
    align-items: center;
}
/* 用户 ID */
.userIdBtn {
    position: absolute;
    left: 25rpx;
    bottom: 27rpx;
    text-align: left;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(172,7,7,1);
    line-height:1;
    padding: 0;
}
/* 个人信息 */
.getMemberBtn {
    position: absolute;
    right: 0;
    top: 140rpx;
    height: 48rpx;
    background:linear-gradient(280deg,rgba(218,173,106,0.7) 0%,rgba(242,191,98,0.7) 100%);
    box-shadow:0px 5px 11px 0px rgba(255,80,80,0.41);
    border-radius:28rpx 0 0 28rpx;
    line-height: 1;
    display: flex;
    align-items: center;
    padding-left: 28rpx;
    padding-right: 2rpx;
}
.getMemberBtn >text {
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    color:rgba(255,255,255,1);
    line-height:24rpx;
}
.getMemberBtn >image {
    margin-left: 10rpx;
    width: 24rpx;
    height: 24rpx;
}

.contentBox {
    padding-top: 20rpx;
    min-height: 200rpx;
    background-color: #fff;
    width: 100%;
}

.functionCells {
    background-color: #fff;
    box-shadow: inset 0 -1px 0 0 rgba(232,232,232,1);
    height: 110rpx;
    margin: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.functionCells:last-child {
    box-shadow: none;
}
.cellImage {
    width: 40rpx;
    height: 40rpx;
}
.cellTitleLabel {
	font-family: PingFangSC-Regular;
	font-size: 12px;
	color: #353535;
	margin-left: 30rpx
}
.cellLabel {
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #353535;
    margin-left: 30rpx
}
.cellValueLabel {
    margin-right: 20rpx;
    font-size:32rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:rgba(255,61,75,1);
}
.detaileArrow {
    width: 32rpx;
    height: 32rpx;
}
.cardbagBox{
		padding: 10rpx 30rpx;
}