/* components/course-cell/course-cell.wxss */
/* 玫红色 */
.color-1 { 
  background:linear-gradient(to right#FF3F3F,#FD6161);
}
/* 蓝色 */
.color-3 {
  background:linear-gradient(to right,#4C3AF9,#3869F9);
}
.course-cell {
  background-color: #fff;
  padding: 40rpx 0 30rpx 0;
  
}
.course-cell:not(:last-child) {
  border-bottom: 1px solid #e8e8e8;
}
.top {
  display: flex;
  
}
.pic-wrap {
  width: 200rpx;
  height: 270rpx;
  position: relative;
}
.pic-wrap>image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
  /* filter:blur(2px); */
}
.pic-wrap .sub-icon {
  position: absolute;
  padding: 0 12rpx;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.info-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 26rpx;
}
