.info-item.info-sub {
  overflow: hidden;
  font-family:PingFangSC-Semibold;
  margin-bottom: 14rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  margin-top: 0;
  line-height: 1.6;
  color: #323232;
}
.info-item {
  margin-top: 10rpx;
}
