.right-bottom {
  margin-bottom: 13rpx;
  display: flex;
  /* text-align: right; */
  justify-content: space-between;
}
.price {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
  color: #FD6161;
}
.price-sub {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.btn {
  width: 112rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background:linear-gradient(to right,#FF3F3F,#FD6161);
  border-radius:15px;
  padding: 0;
}
