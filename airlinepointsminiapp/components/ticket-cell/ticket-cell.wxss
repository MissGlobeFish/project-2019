/* components/card-cell/card-cell.wxss */
.card-container {
  padding: 20rpx;
  /* padding-top: 20rpx;
  padding-bottom: 20rpx; */
  /* margin: 20rpx; */
  background-color: #fff;
  border-radius: 2px;
  display: flex;
}

.card-container:not(:last-child) {
  box-shadow:0px -1rpx 0px 0px rgba(232,232,232,0.5);
}
.cellImage{
  width: 200rpx;
  height: 200rpx;
  border-radius:8rpx;
  position: relative;
  border:1px solid rgba(232,232,232,1);
}
/* .img-class {
  width: 100%;
  height: 100%;
  border-radius: 5px;
} */
.right-wrap {
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  flex: 1;
  margin-left: 20rpx;
}
.title {
  display: flex;
  justify-content: space-between;
}
.sub-title {
  font-size: 32rpx;
  font-weight: bold;
}
.card-pwd {
  font-size: 28rpx;
  color: #FF3D4B;
  line-height:1.6;
  overflow:hidden;
  min-width:60rpx;
  text-align:center;
  padding:0;
}
.card-free {
  line-height: 1;
  font-size: 26rpx;
  color: #353535;
  border: 1px solid #ddd;
  padding: 2px 7px;
}
.desc {
  margin-top: 20rpx;
  color: #808080;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3; 
}
.modal-content {
  min-height: 314rpx;
  padding: 100rpx 86rpx;
}
.modal-text {
  color: #353535;
  font-size: 36rpx;
  text-align: center;
}
.modal-ticketfree{
  padding: 35rpx 30rpx 45rpx 30rpx;
}
.modal-ticketfree .modal-title {
  font-size: 28rpx;
  font-weight: bold;
}
.modal-ticketfree .modal-input {
  margin: 35rpx auto auto auto;
}
.modal-ticketfree .modal-input input {
  height: 100rpx;
  padding-left : 20rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #e8e8e8;
}
.modal-ticketfree .error-msg {
  height: 40rpx;
  font-size: 26rpx;
  margin:10rpx auto auto auto;
  color: #D0021B;
}

.message-modal {
  padding: 67rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}
.message-modal image {
  width: 120rpx;
  height: 158rpx;
}
