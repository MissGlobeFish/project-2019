.container {
  position: relative;
  background-color: #fff
}
.main-info .header {
  position:relative;
  z-index:101;
  padding: 60rpx 40rpx 0 40rpx;
  display: flex;
  /* background-color: #227788; */
}
.header-bg {
  width: 100%;
  height: 530rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  overflow: hidden;
}
.pic {
  width: 200rpx;
  height: 270rpx;
  background-color: #eee;
  border-radius: 4px;
}
.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 38rpx;

}
.title view{
  height: 40rpx;
  background: #eee;
  border-radius: 4rpx;
  margin-top: 10rpx;
}
.price {
  width:110rpx;
  height:40rpx;
  background-color:#eee;
  border-radius:4px;
}
.content {
  padding: 40rpx;
  height: 100%;
  border-radius: 15px 15px 0 0;
  background-color: #fff;
  margin-top: -86rpx;
  position: relative;
  z-index: 99
}
.contet-top {
  padding-top: 86rpx;
}
.content-nav view{
  width: 112rpx;
  height: 40rpx;
  background-color: #eee;
  float: left;
  border-radius: 4px;
  margin-top: 70rpx;
}
.content-nav view:nth-child(2) {
  margin-left: 60rpx;
}
.item {
  height: 40rpx;
  background: #eee;
  border-radius: 4px;
  margin-top: 38rpx;
}
.content-html {
  height: 800rpx;
  background: #eee;
  border-radius: 4px;
  margin-top: 30rpx;
}