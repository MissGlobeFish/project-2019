/* components/trolley-cell/trolley-cell.wxss */
.cellContainer {
    background-color: #fff;
    min-height: 100rpx;
    max-height: 120rpx;
    /* box-shadow: inset 0 -1px 0 0 #E8E8E8; */
    box-shadow:0px -1px 0px 0px rgba(232,232,232,1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 30rpx 10rpx 30rpx;
}

.cellTitle {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #353535;
    text-align: left;
    width: 35%;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 

}

.priceBox {
    align-items:center;
    display: flex;
    justify-content: flex-end;
    width: 35%;
}

.priceNumber {
    font-family: PingFangSC-Medium;
    font-size: 14px;
    color:rgba(255,61,75,1);
}
.priceUnit {
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #808080;
    margin-left: 6rpx;
}


.numberBox {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-direction: row;
    min-width: 30%;
}

.numberLabel {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #353535;
    text-align: center;
    line-height: 44rpx;
    min-width: 45rpx;
}
.numberButton {
    background-color: transparent;
    line-height: 1;
    padding-left: 5rpx;
    padding-right: 5rpx;
    display:flex;
    align-items:center;
}

.btnImage {
    width: 44rpx;
    height: 44rpx;
}